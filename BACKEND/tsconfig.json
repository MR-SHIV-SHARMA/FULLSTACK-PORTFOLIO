{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["./node_modules/*"]
      }
    },
    "include": [
      "src/**/*.ts"  // Ensure this path matches your actual TypeScript file location
    ],
    "exclude": [
      "node_modules"
    ]
  }
  