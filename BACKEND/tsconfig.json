// tsconfig.json
{
    "compilerOptions": {
      "target": "ESNext",          // Specify your target ECMAScript version
      "module": "commonjs",        // Specify module code generation
      "outDir": "./dist",          // Output directory for compiled files
      "strict": true,              // Enable all strict type-checking options
      "esModuleInterop": true,     // Enables emit interoperability between CommonJS and ES Modules
      "skipLibCheck": true,        // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,  // Ensure consistency in file casing
      "moduleResolution": "node",  // Specify module resolution strategy: 'node' (Node.js) or 'classic'
      "resolveJsonModule": true,   // Allow importing of JSON modules
      "baseUrl": "./",             // Base directory to resolve non-relative module names
      "paths": {
        "*": ["./node_modules/*"]  // Path mapping for module resolution
      }
    },
    "include": [
      "src/**/*.ts"               // Specify the files to include in compilation
    ],
    "exclude": [
      "node_modules"              // Specify the files to exclude from compilation
    ]
  }
  